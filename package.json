{
  "name": "romainguilloteau",
  "version": "1.0.0-beta.1",
  "homepage": "https://www.romainguilloteau.com",
  "author": "Romain GUILLOTEAU (https://www.romainguilloteau.com/)",
  "repository": "https://gitlab.com/rubyistdotjs/romainguilloteau",
  "license": "ISC",
  "private": true,
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "firebase": "^5.3.0",
    "lodash": "^4.17.5",
    "prop-types": "^15.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-feather": "^1.1.0",
    "react-ga": "^2.4.1",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.4.0",
    "react-progressive-image": "^0.6.0",
    "react-recaptcha": "^2.3.10",
    "react-scripts": "^2.0.0",
    "validator": "^10.5.0"
  },
  "scripts": {
    "start": "yarn watch:css & react-scripts start",
    "build": "yarn build:css && react-scripts build && node sitemap.js && react-snapshot",
    "build:css": "postcss src/stylesheets/application.css -o src/application.css",
    "watch:css": "postcss src/stylesheets/application.css -o src/application.css -w",
    "i18n": "npm run i18n:extractMessages && npm run i18n:updateLocales && npm run i18n:updateDatabaseLocales",
    "i18n:extractMessages": "react-intl-cra 'src/**/*.{js,jsx}' -o 'src/i18n/messages/messages.json'",
    "i18n:updateLocales": "node ./scripts/translationRunner.js",
    "i18n:updateDatabaseLocales": "node ./scripts/updateDatabaseLocales.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "postcss-cli": "^6.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^12.0.0",
    "prettier": "^1.14.3",
    "react-intl-cra": "^0.3.3",
    "react-intl-translations-manager": "^5.0.3",
    "react-snapshot": "^1.3.0",
    "sitemap": "^2.0.0",
    "tailwindcss": "^0.7.0"
  }
}
